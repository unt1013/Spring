	<!-- parsing 후 화면에 출력 -->

	<script>
		$('button').click(function() {
			$.ajax({
				url : '/getNaver',
				type : 'post',
				data : {
					'text' : $('#txt').val()
				},
				success : function(res) {
					console.log(res);
				}
			})
		})
